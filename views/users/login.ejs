<%- include('../layouts/header.ejs') %>


    <section class="vh-100" style="background-color: #071033; height:750px;" >
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                    alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post" action="/login">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">user login page</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your
                                            account</h5>

                                        <div class="form-outline mb-4">
                                            <input type="email" name="email" id="email"
                                                class="form-control form-control-lg" placeholder="Enter your Email" required />

                                        </div>
                                        <span id="er1" style="color: red;"></span>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="password"
                                                class="form-control form-control-lg" name="password"
                                                placeholder="Enter your Password" required />

                                        </div>
                                        <span id="er2" style="color: red;"></span><br>
                                        <% if(typeof message !=  "undefined" ){ %>

                                            <span style="color: red;">
                                                <%= message %>
                                            </span>
                                            <% } %>



                                        <div class="pt-1 mb-4">
                                            <input value="Login" onclick="validate()" class="btn btn-dark btn-lg btn-block" type="submit">
                                        </div>


                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a
                                                href="/register" style="color: #393f81;">Register here</a>
                                        </p>


                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>











<script>


    function validate(){

        let email = document.getElementById('email').value

        let password = document.getElementById('password').value


        if(email == ''){
            document.getElementById('er1').innerText='email must fill'
        }else{
               document.getElementById('er1').innerText=''
        }
        if(password == ''){
            document.getElementById('er2').innerText='password must fill'
        }else{
            document.getElementById('er2').innerText=''
        }

    }
</script>




