<%- include('../layouts/header.ejs') %>


    <section class="vh-100" style="background-color: #180a45; height:750px;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://images.unsplash.com/photo-1517960413843-0aee8e2b3285?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8YmFsYW5jZXxlbnwwfHwwfHw%3D&w=1000&q=80"
                                    alt="login form" class="img-fluid"
                                    style="border-radius: 1rem 0 0 1rem; height:440px;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post" action="">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">admin login page</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into admin
                                            account</h5>

                                        <div class="form-outline mb-4">
                                            <input type="email" name="email" id="email" required
                                                class="form-control form-control-lg" placeholder="Enter your Email" />
                                            <span id="en1" style="color:red;"></span>

                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="password" required
                                                class="form-control form-control-lg" name="password"
                                                placeholder="Enter your Password" />
                                            <span id="en2" style="color:red;"></span><br>
                                            <% if(typeof message !==  "undefined" ){ %>

                                                <span style="color: rgb(232, 5, 5);">
                                                    <%= message %>
                                                </span>
                                                <% } %>

                                        </div>

                                        <div class="pt-1 mb-4">
                                            <input value="Login" onclick="validate()"
                                                class="btn btn-dark btn-lg btn-block" type="submit" required>
                                        </div>


                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script>

        function validate() {

            email = document.getElementById('email').value
            password = document.getElementById('password').value


            if (email == '') {
                document.getElementById('en1').innerText = 'please must fill email '
            }
            else {
                document.getElementById("en1").innerText = ""
            }
            if (password == '') {
                document.getElementById('en2').innerText = 'please must fill password '
            }
            else {
                document.getElementById("en2").innerText = ""
            }

        }
    </script>

    <%- include('../layouts/footer.ejs') %>